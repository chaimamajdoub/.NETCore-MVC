@model IEnumerable<TP11Core.Models.Categorie>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var categorie in Model) {
        <tr>
            <td>@categorie.Id</td>
                <td>@categorie.Name</td>
            <td>
                    <a class="btn-primary" asp-controller="Categories" asp-action="Edit" asp-route-id="@categorie.Id">Edit</a> |
                    <a asp-controller="Categories" asp-action="Details" asp-route-id="@categorie.Id">Details</a> |
                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@categorie.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
